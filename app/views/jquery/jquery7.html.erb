}

.show-text-editor {
  border: 1px solid black;
  height: 20px;
  width: 100%;
}


.text-editor-buttoncontainer {
  border: 1px solid #CCC;
  
  width: 100%;
}

.text-editor-topiccontainer {
   border: 1px solid #CCC;
  
  width: 100%;

}

.text-editor-button-list li {
  display: inline;
  list-style: none;
  background: lightblue;
  padding: 5px;
}

.text-editor-button-list li a:hover {
  mouse: pointer;
  background: darkblue;
}


.bold-text {
  font-weight: bold;
}

.italic-text {
  font-style: italic;
}

.underline-text {
  text-decoration: underline;
}

.title-text {
